map $request_uri $path_info {
    ~^/(?P<foo>.*)$  $foo;
}

server {

    server_name yiqikong-web.wine.genee.cn;
    root /data/gini/web/;
    index index.php index.html index.htm;

    location ~ \.php$ {
        fastcgi_pass yiqikong-web.docker.local:9000;
        include fastcgi_params;
    }

    location / {
        alias /data/gini-modules/yiqikong-web/web/;

        #该配置需要在rewrite之前, 避免错误rewrite
        location ~* \.(eot|ttf|woff)$ {
            add_header Access-Control-Allow-Origin *;
        }

        location ~ ^/\!.+\.(js|css|png|jpg|jpeg|gif|ico|swf)$ {
            rewrite ^/(.+)$ /index.php/public?f=$1;
        }

        location ~ \.php {
            fastcgi_split_path_info ^(.+\.php)(/.+)$;

            fastcgi_pass yiqikong-web.docker.local:9000;
            fastcgi_index index.php;
            fastcgi_param PATH_INFO $fastcgi_path_info;
            fastcgi_param GINI "testing";

            include fastcgi_params;
        }

        location ~ \.(js|css|png|jpg|jpeg|gif|ico|swf)$ {
            expires max;
            log_not_found off;
        }

        location ~ \/.+ {
            try_files $request_uri $request_uri/ /index.php/$path_info;
        }
    }
}
